# =============================================================================
# Binance WebSocket Configuration
# =============================================================================

BINANCE_WS_URL=wss://stream.binance.com:9443/stream
BINANCE_STREAMS=btcusdt@trade,ethusdt@trade,bnbusdt@trade,btcusdt@ticker,ethusdt@ticker,bnbusdt@ticker
RECONNECT_MAX_DELAY_SECONDS=60
WS_CONNECTION_TIMEOUT=10

# =============================================================================
# Kafka Configuration
# =============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_MAX_RATE_PER_PARTITION=50000
KAFKA_ACKS=all

# Kafka Topics
TOPIC_RAW_TRADES=raw_trades
TOPIC_RAW_TICKERS=raw_tickers
TOPIC_PROCESSED_AGGREGATIONS=processed_aggregations
TOPIC_ALERTS=alerts

# =============================================================================
# Spark Streaming Configuration
# =============================================================================

SPARK_EXECUTOR_CORES=1
SPARK_SHUFFLE_PARTITIONS=2
SPARK_CHECKPOINT_LOCATION=/opt/airflow/data/spark-checkpoints
SPARK_BACKPRESSURE_ENABLED=true

# =============================================================================
# Redis Configuration (Hot Path)
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# PostgreSQL - Airflow Metadata Database
# =============================================================================

AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow
AIRFLOW_POSTGRES_DB=airflow
AIRFLOW_POSTGRES_PORT=5433

# =============================================================================
# PostgreSQL - Data Storage (Warm Path)
# =============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=crypto
POSTGRES_PASSWORD=crypto
POSTGRES_DB=crypto_data

# =============================================================================
# MinIO Object Storage (Cold Path)
